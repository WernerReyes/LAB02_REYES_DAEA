<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBox x:Name="name"  Height="80" Width="300" />
            <TextBox x:Name="lastname"   Height="80" Width="300" />
            <Button 
                Click="Button_Click"
                FontSize="20"
                Content="Listar" Background="Red" Height="50" Width="200">
            </Button>
            <Button 
                Click="Button_Click_1"
                Content="Listar cursos" Background="Green" Height="50" Width="200">
            </Button>
            <DataGrid x:Name="dgProfesores"></DataGrid>
            <DataGrid x:Name="dgCursos"></DataGrid>
            <Button 
                
    Content="Agregar" Background="Yellow" x:Name="add" Height="50" Width="200" Click="Button_Click_2">
            </Button>
        </StackPanel>

    </Grid>
</Window>
